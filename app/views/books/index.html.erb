<table class="table table-hover table-bordered">
  <thead>
  <th>Id</th>
  <th>Title</th>
  <th>Year</th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.year %></td>
      <td><%= link_to "Update", controller: "books", action: "edit", id: book.id %></td>
      <td><%= link_to "Delete", controller: "books", action: "destroy", id: book.id, method: :delete, data: { confirm: "Allow?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @books %>


