<table class="table table-hover table-bordered">
  <thead>
  <th>Id</th>
  <th>Name</th>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %></td>
      <td><%= genre.name %></td>
      <td><%= link_to "Update", controllers: "genres_controller", action: "edit", id: genre.id %></td>
      <td><%= link_to "Delete", controllers: "genres_controller", action: "destroy", id: genre.id, method: :delete, data: { confirm: "Allow?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @genres %>